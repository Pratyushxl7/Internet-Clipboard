<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">New Item</div>
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="title" required>
		</div>
		
		<div class="field">
			<label>Image Link</label>
			<input type="text" name="blog[image]" placeholder="image">
		</div>
		
		<div class="field">
			<label>Description</label>
			<textarea name="blog[body]"></textarea>
		</div>
		<input class="ui violet big basic button" type="submit" value="Save">
	</form>
</div>

